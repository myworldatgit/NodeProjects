<%- include('layout/header') %>
<%- include('layout/style') %>
<% if (message) { %>
    <div class="alert alert-<%= message.type %>" role="alert">
        <%= message.message %>
      </div>
<% } %>
<div class="form-container">
    <form  action="/register" method="post" id="form-submit" >
        <div>
            <label for="emailregister">Email Address</label>
            <input type="text"name='emailregister' class="emailregister" id="emailregister" required>
        </div>
       
        <div>
            <label for="passwordregister">Password</label>
            <input type="text" name="passwordregister" class="passwordregister" id="passwordregister" required>
        </div>
        
        
        <div> 
            <button type="submit">Submit</button>
            <!-- use submit btn not input field -->
            
        </div>
    </form>
    </div>
    
    
