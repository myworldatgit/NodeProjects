
<%- include('layout/header') %>
<%- include('layout/style') %>




<div class="form-container">
<form  action="/update/<%= user._id %>" method="post" id="form-submit" enctype="multipart/form-data">
    <div>
        <label for="Name">Name</label>
        <input type="text"name='Name' class="text" value="<%= user.name %>" id="Name" required>
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" name="Email" class="email" value="<%= user.email %>" id="Email" required>
    </div>
    <div>
        <label for="Phnumber">Phone Number</label>
        <input type="tel" name="Phnumber" class="Phnumber" value="<%= user.phone %>" id="Phnumber" required>
    </div>
    <div>
        <label for="Address">Address</label>
        <input type="text"name="Address" class="address" value="<%= user.address %>" id="Address" >
    </div>
    <div>
        <label for="Image">Image</label>
        <input type="file" name="Image" class="Image" id="Image" >
        <img src="/<%= user.image %>" alt=""  id="edituserimg">
        <input type="hidden" name="old_image" value="<%= user.image %>">
    </div>
    
    <div> 
        <button type="submit">Update</button>
        <!-- use submit btn not input field -->
        
    </div>
</form>


</div>
<%- include('layout/footer') %>
